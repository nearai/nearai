              "type": {
                "type": "string",
                "enum": [
                  "product"
                ]
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "image_url": {
                      "type": "string",
                      "format": "uri"
                    },
                    "name": {
                      "type": "string"
                    },
                    "price": {
                      "type": "object",
                      "properties": {
                        "usd": {
                          "type": "number"
                        }
                      }
                    },
                    "url": {
                      "type": "string",
                      "format": "uri"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "price",
                    "url"
                  ]
                }
              }
            },
            "required": [
              "type",
              "options"
            ]
          }
        },
        "required": [
          "request_choice"
        ]
      },
      {
        "type": "object",
        "properties": {
          "request_data": {
            "type": "object",
            "properties": {
              "schema": {
                "type": "string",
                "format": "uri"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "label": {
                      "type": "string"
                    },
                    "validation": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "options": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "label": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "value"
                        ]
                      }
                    }
                  },
                  "required": [
                    "name"
                  ]
                }
              }
            },
            "required": [
              "schema",
              "fields"
            ]
          }
        },
        "required": [
          "request_data"
        ]
      },
      {
        "type": "object",
        "properties": {
          "request_payment": {
            "type": "object",
            "properties": {
              "version": {
                "type": "string"
              },
              "payment_request_url": {
                "type": "string",
                "format": "uri"
              },
              "payment_context_token": {
                "type": "string"
              },
              "offers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "balance": {
                      "type": "number"
                    },
                    "amount": {
                      "type": "number"
                    },
                    "currency": {
                      "type": "string"
                    },
                    "payment_methods": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "duration": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "amount",
                    "currency"
                  ]
                }
              },
              "terms_url": {
                "type": "string",
                "format": "uri"
              },
              "metadata": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "required": [
              "version",
              "payment_request_url",
              "payment_context_token",
              "offers"
            ]
          }
        },
        "required": [
          "request_payment"
        ]
      }
    ]
  }
